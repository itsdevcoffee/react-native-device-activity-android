{
  "name": "react-native-device-activity-android-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "android": "yarn workspace example android",
    "ios": "yarn workspace example ios",
    "build": "yarn workspace @breakrr/react-native-device-activity-android build",
    "build:package": "yarn workspace @breakrr/react-native-device-activity-android build",
    "dev": "yarn build:package && yarn android",
    "dev:logs": "adb logcat -s RNDeviceActivity:D -s ReactNativeJS:I",
    "dev:clean": "yarn workspace example prebuild --clean && yarn build:package && yarn android",
    "logs": "adb logcat -s RNDeviceActivity:D -s ReactNativeJS:I -s ExpoDeviceLauncher:D",
    "logs:all": "adb logcat",
    "clean": "yarn workspace example run prebuild --clean && cd apps/example/android && ./gradlew clean && cd ../../..",
    "check": "yarn typecheck && yarn lint",
    "uninstall": "adb uninstall com.bradfordsledge.reactnativedeviceactivityandroidmonorepo",
    "devices": "adb devices",
    "restart": "yarn uninstall && yarn dev:clean",
    "fresh": "yarn uninstall && cd apps/example/android && ./gradlew clean && cd ../../.. && yarn workspace example prebuild --clean && yarn build:package && yarn android --no-bundler",
    "start": "yarn workspace example start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "@types/react": "~19.0.0",
    "@types/react-native": "~0.73.0"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "expo": "~54.0.19",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "expo-system-ui": "~4.0.6"
  }
}
